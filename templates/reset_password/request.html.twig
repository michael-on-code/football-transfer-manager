{% extends '_parts/auth.part.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block body %}

<div class="authentication-login min-vh-100 bg-body row justify-content-center align-items-center p-4">
                <div class="col-sm-8 col-md-6 col-xl-9">
                  <h2 class="mb-3 fs-7 fw-bolder">Reset Your password</h2>
                  <p class=" mb-9">A reset email would be sent to you allowing you to reset your password. Fill out the form now !</p>
                  <div class="row">
                  {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email) }}
                    {{ adminSubmitButton('Sign in') }}
                    <div class="d-flex align-items-center justify-content-center">
                      <p class="fs-4 mb-0 fw-medium"><a class="text-primary" href="{{ path('app_dashboard') }}">
                      <i class="ti ti-arrow-left" ></i> Back to login</a></p>
                    </div>
                  {{ form_end(requestForm) }}

                  {% for message in app.flashes('flashMessage') %}
                    {{ notificationMsgShow(message) }}
                  {% endfor %}

                </div>
              </div>
            </div>
{% endblock %}
