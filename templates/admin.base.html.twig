<!DOCTYPE html>

<html>
    <head>
        <meta charset="UTF-8">
        <title>{{ siteOptions.siteName ? siteOptions.siteName ~ ' | ' : '' }}{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="handheldfriendly" content="true" />
    <meta name="MobileOptimized" content="width" />
    {# <meta name="description" content="Mordenize" /> #}
    <meta name="author" content="www.animashaunmichael.com" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/png" href=" {{ siteOptions.siteLogo ? asset('uploads/' ~ siteOptions.siteLogo) : asset('admin/images/logos/favicon.png') }}" />
    <!-- Additional Styles -->
    {% block additionalStyles %}{% endblock %}
    <!-- Additional Styles -->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <!-- Core Css -->
    <link id="themeColors" rel="stylesheet" href=" {{ asset('admin/css/style.min.css') }}" />
    <link rel="stylesheet" href=" {{ asset('admin/css/stylesheet.css') }}" />
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="preloader">
      <img src=" {{ siteOptions.siteLogo ? asset('uploads/' ~ siteOptions.siteLogo) : asset('admin/images/logos/favicon.png') }} " alt="loader" class="lds-ripple img-fluid" />
    </div>
    
    <!-- Body Wrapper -->
    {% for message in app.flashes('notice') %}
        <div class="toastify" data-title="{{ message }}"></div>
    {% endfor %}
    {% block bodyWrapper %}{% endblock %}
    
    <!-- Import Js Files -->

    <script src="{{ asset('admin/libs/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('admin/libs/simplebar/dist/simplebar.min.js') }}"></script>
    <script src="{{ asset('admin/libs/bootstrap/dist/js/bootstrap.bundle.min.js') }}"></script>
    <!-- core files -->
    <script src="{{ asset('admin/js/app.min.js') }}"></script>
    <script src="{{ asset('admin/js/app.horizontal.init.js') }}"></script>
    <script src="{{ asset('admin/js/sidebarmenu.js') }}"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

    {% block additionalScripts %}{% endblock %}
    <script src="{{ asset('admin/js/custom.js') }}"></script>
    
    </body>
</html>
