{% extends '_parts/dashboard.part.html.twig' %}

{% block title %}Add Player{% endblock %}

{% block dashboardBody %}
<div class="body-wrapper">
        <div class="container-fluid">
        <div class="mb-3">
        <a href=" {{ path('app_team_add') }} " class="btn btn-primary">Add a new team</a>
        <a href=" {{ path('app_player_add') }} " class="btn btn-success ml-3">Add a new player</a>
        </div>
          <div class="card bg-light-info shadow-none position-relative overflow-hidden">
            <div class="card-body px-4 py-3">
              <div class="row align-items-center">
                <div class="col-9">
                  <h4 class="fw-semibold mb-8">Edit {{playerData.surname}}</h4>
                  <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                      <li class="breadcrumb-item"><a class="text-muted" href="{{ path('app_dashboard') }}">Dashboard</a></li>
                      <li class="breadcrumb-item"><a class="text-muted" href="{{ path('app_team') }}">Teams</a></li>
                      <li class="breadcrumb-item" aria-current="page">Edit {{playerData.surname}}</li>
                    </ol>
                  </nav>
                </div>
                <div class="col-3">
                  <div class="text-center mb-n5">  
                    <img src="{{ asset('admin/images/breadcrumb/ChatBc.png') }}" alt="" class="img-fluid mb-n4">
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="card">
            <div class="card-body">
            {{ form_start(playerForm) }}
              <div class="row">
              
                    <div class="col-lg-6 d-flex align-items-stretch">
                      <div class="card w-100 position-relative overflow-hidden">
                        <div class="card-body p-4">
                          <h5 class="card-title fw-semibold">Edit {{playerData.surname}} </h5>
                          <p class="card-subtitle mb-4">Update {{playerData.surname}} infos here</p>
                          {{ form_row(playerForm.firstName) }}
                          {{ form_row(playerForm.lastName) }}
                          {{ form_row(playerForm.surname) }}
                          {{ form_row(playerForm.birthdate) }}
                          {{ form_row(playerForm.country) }}
                          {{ form_row(playerForm.team) }}
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-6 d-flex align-items-stretch">
                      <div class="card w-100 position-relative overflow-hidden">
                        <div class="card-body p-4">
                        {{ form_row(playerForm.about) }}
                          <h5 class="card-title fw-semibold">Player's photo</h5>
                          <p class="card-subtitle mb-4">Change the player's photo from here</p>
                          
                          <div class="text-center picture-upload-container">
                          {{ form_row(playerForm.photoFile) }}
                            <img src="{{ playerData.photo ? asset('uploads/' ~ playerData.photo) : '' }}" alt="" class="img-fluid" width="120">
                            <div class="d-flex align-items-center justify-content-center my-4 gap-3">
                              {{ adminUploadTriggerButton('Choose') }}
                            </div>
                            <p class="mb-0">Allowed JPG or PNG. Max size of 1Mb</p>
                          </div>
                          
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-3">
                    {{ adminSubmitButton('Update', '', {} , 'btn btn-primary w-auto') }}
                    </div>
                    
                  </div>
                  {{ form_end(playerForm) }}
            </div>
          </div>
        </div> 
      </div>
{% endblock %}

{% block additionalScripts %}
<script src="{{ asset('admin/libs/select2/dist/js/select2.full.min.js') }}"></script>
{% endblock %}
{% block additionalStyles %}
<link rel="stylesheet"  href=" {{ asset('admin/libs/select2/dist/css/select2.min.css') }}">
{% endblock %}