{% extends '_parts/dashboard.part.html.twig' %}

{% block title %}Add Player{% endblock %}

{% block dashboardBody %}
<div class="body-wrapper">
        <div class="container-fluid">
          <div class="card bg-light-info shadow-none position-relative overflow-hidden">
            <div class="card-body px-4 py-3">
              <div class="row align-items-center">
                <div class="col-9">
                  <h4 class="fw-semibold mb-8">Transfer {{playerData.surname}}</h4>
                  <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                      <li class="breadcrumb-item"><a class="text-muted" href="{{ path('app_dashboard') }}">Dashboard</a></li>
                      <li class="breadcrumb-item"><a class="text-muted" href="{{ path('app_team') }}">Teams</a></li>
                      <li class="breadcrumb-item" aria-current="page">Buy</li>
                    </ol>
                  </nav>
                </div>
                <div class="col-3">
                  <div class="text-center mb-n5">  
                    <img src="{{ asset('admin/images/breadcrumb/ChatBc.png') }}" alt="" class="img-fluid mb-n4">
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="card">
            <div class="card-body">
            {{ form_start(playerForm) }}
              <div class="row">
              
                     <div class="col-lg-6 d-flex align-items-stretch">
                      <div class="card w-100 position-relative overflow-hidden">
                        <div class="card-body p-4">
                        
                          
                          
                          <div class="text-center picture-upload-container">
                            <img src="{{ asset('uploads/' ~ playerData.photo ) }}" alt="" class="img-fluid mb-3" width="120">
                            <div class="d-flex align-items-center justify-content-center ">
                              <h5> {{ playerData.surname }} {{ showCountryEmoji(playerData.country) }} </h5>
                            </div>
                            <div class="d-flex align-items-center justify-content-center mb-3 gap-3"> 
                                <img class="rounded-2" width="20" height="20" src="{{ asset('uploads/' ~ playerData.team.logo) }}" />
                                <h6 class="mb-0">{{ playerData.team.name }}'s player</h6>
                              </div>
                            <p class="mb-0 text-muted">{{playerData.about}}</p>
                          </div>
                          
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-6 d-flex align-items-stretch">
                      <div class="card w-100 position-relative overflow-hidden">
                        <div class="card-body p-4">
                          <h5 class="card-title fw-semibold">Transfer Player</h5>
                          <p class="card-subtitle mb-4">Fill out the form to transfer the player</p>
                          {{ form_row(playerForm.team) }}
                          {{ form_row(playerForm.description) }}
                          {{ form_label(playerForm.amount) }}
                          <div class="input-group mb-3">
                          <span class="input-group-text">{{ siteOptions.siteCurrency }}</span>
                          {{ form_widget(playerForm.amount) }}
                          {{ form_errors(playerForm.amount) }}
                          </div>
                        </div>
                      </div>
                    </div>
                    
                    <div class="col-lg-12 go-to-left">
                    {{ adminSubmitButton('Transfer', '', {} , 'btn btn-primary w-auto') }}
                    </div>
                    
                  </div>
                  {{ form_end(playerForm) }}
            </div>
          </div>
        </div> 
      </div>
{% endblock %}

{% block additionalScripts %}
<script src="{{ asset('admin/libs/select2/dist/js/select2.full.min.js') }}"></script>
{% endblock %}
{% block additionalStyles %}
<link rel="stylesheet"  href=" {{ asset('admin/libs/select2/dist/css/select2.min.css') }}">
{% endblock %}