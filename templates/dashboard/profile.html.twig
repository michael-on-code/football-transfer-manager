{% extends '_parts/dashboard.part.html.twig' %}

{% block title %}Account settings{% endblock %}

{% block dashboardBody %}
<div class="body-wrapper">
        <div class="container-fluid">
          <div class="card bg-light-info shadow-none position-relative overflow-hidden">
            <div class="card-body px-4 py-3">
              <div class="row align-items-center">
                <div class="col-9">
                  <h4 class="fw-semibold mb-8">Account Setting</h4>
                  <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                      <li class="breadcrumb-item"><a class="text-muted" href="{{ path('app_dashboard') }}">Dashboard</a></li>
                      <li class="breadcrumb-item" aria-current="page">Account Setting</li>
                    </ol>
                  </nav>
                </div>
                <div class="col-3">
                  <div class="text-center mb-n5">  
                    <img src="{{ asset('admin/images/breadcrumb/ChatBc.png') }}" alt="" class="img-fluid mb-n4">
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="card">
            <div class="card-body">
              <div class="row">
                    <div class="col-lg-6 d-flex align-items-stretch">
                      <div class="card w-100 position-relative overflow-hidden">
                        <div class="card-body p-4">
                        
                          <h5 class="card-title fw-semibold">Change Profile</h5>
                          <p class="card-subtitle mb-4">Change your profile picture from here</p>
                          <div class="text-center picture-upload-container">
                          {{ form_start(pictureForm) }}
                          {{ form_row(pictureForm.photo) }}
                            <img src="{{ currentUser.photo ? asset('uploads/'~ currentUser.photo) : asset('admin/images/profile/user-1.jpg') }}" alt="" class="img-fluid rounded-circle" width="120" height="120">
                            <div class="d-flex align-items-center justify-content-center my-4 gap-3">
                            {{ adminUploadTriggerButton('Choose') }}
                              {{ adminSubmitButton('Upload', 'immediate-upload-btn', {'disabled':''} , 'btn btn-primary') }}
                            </div>
                            {{ form_end(pictureForm) }}
                            <p class="mb-0">Allowed JPG or PNG. Max size of 1Mb. Square Image preferentially</p>
                          </div>
                          
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-6 d-flex align-items-stretch">
                      <div class="card w-100 position-relative overflow-hidden">
                        <div class="card-body p-4">
                          <h5 class="card-title fw-semibold">Change Password</h5>
                          <p class="card-subtitle mb-4">To change your password please confirm here</p>
                          {{ form_start(profileForm) }}
                          {{ form_row(profileForm.currentPassword) }}
                          {{ form_row(profileForm.newPassword) }}
                          {{ adminSubmitButton('Update') }}
                          {{ form_end(profileForm) }}
                        </div>
                      </div>
                    </div>
                  </div>
            </div>
          </div>
        </div> 
      </div>
{% endblock %}

